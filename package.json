{
  "name": "rebootjs-back",
  "version": "1.0.0",
  "description": "Backend of the Messenger app for the RebootJS training",
  "main": "dist/server.js",
  "scripts": {
    "start": "npm run build && node -r dotenv/config ./dist/src/server.js",
    "build": "tsc --project tsconfig.json",
    "test": "jest",
    "dev": "nodemon -r dotenv/config src/server.ts",
    "dev-env": "nodemon"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@types/connect-mongo": "^3.1.3",
    "@types/cors": "^2.8.7",
    "@types/crypto-js": "^3.1.47",
    "@types/express": "^4.17.7",
    "@types/express-session": "^1.17.0",
    "@types/helmet": "0.0.47",
    "@types/jest": "^26.0.13",
    "@types/mongoose": "^5.7.36",
    "@types/morgan": "^1.9.1",
    "@types/passport": "^1.0.4",
    "@types/passport-local": "^1.0.33",
    "body-parser": "^1.19.0",
    "connect-mongo": "^3.2.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "helmet": "^3.23.3",
    "mongoose": "^5.10.3",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "ts-node": "^9.0.0",
    "tsc": "^1.20150623.0",
    "typescript": "^4.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@types/hapi__joi": "^17.1.2",
    "@types/helmet": "0.0.47",
    "@types/morgan": "^1.9.1",
    "babel-jest": "^26.3.0",
    "dotenv": "^8.2.0",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "tsc": "^1.20150623.0",
    "typescript": "^4.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Flint-Academy/RebootJS-Back.git"
  },
  "keywords": [
    "FlintAcademy"
  ],
  "author": "Thomas Falcone",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Flint-Academy/RebootJS-Back/issues"
  },
  "homepage": "https://github.com/Flint-Academy/RebootJS-Back#readme",
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ignore": [
      "node_modules"
    ],
    "ext": "ts, js, json",
    "execMap": {
      "ts": "ts-node"
    }
  }
}
